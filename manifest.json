{
  "manifest_version": 3,
  "name": "UIT Survey Auto Complete",
  "version": "1.0",
  "description": "Tự động điền khảo sát môn học UIT",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://survey.uit.edu.vn/*",
    "https://student.uit.edu.vn/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "UIT Survey Auto Complete",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://survey.uit.edu.vn/*",
        "https://student.uit.edu.vn/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
